# ------------------------------------------------------------------------------

NAME			= philo
CC				= gcc
CFLAGS			= -Wall -Wextra -Werror -g
SRC				= main.c
OBJ				= $(SRC:.c=.o)
# ==============================================================================


all : $(OBJ)
        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean :
        rm -Rf $(OBJ)

fclean : clean
        rm -Rf $(NAME)

re : fclean all

.PHONY: all clean fclean re
